{% extends 'base.html.twig' %}

{% block title %}Nos services{% endblock %}

{% block body %}
<style>
    .card {
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 1em;
        margin-bottom: 1em;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container  my-5">
    <h1>Nos Services</h1>

    {% if services is empty %}
        <p>Aucun service trouv√©.</p>
    {% else %}
        {% for service in services %}
            <div class="card my-5">
                <div class="row gx-4">
                    <div class="col-md-6">
                        <h3 class="card-title">{{ service.nom }}</h3>
                        <p class="card-text">{{ service.description }}</p>
                    </div>
                    <div class="col-md-6">
                    <img 
                        src="{{ asset('images/services/' ~ service.image) }}" 
                        alt="{{ service.nom }}" 
                        class="img-fluid rounded-end"
                    >
                    </div>
                </div>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}


