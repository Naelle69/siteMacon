{% extends '@EasyAdmin/page/content.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ importmap('app') }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="admin.css">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}

{% block content %}
    <div class="container mt-5">
        <div class="text-center">
            <h1 class="mb-3 fw-bold ">Administrateur</h1>
            <h2 class="mb-4 fs-5">
                Ici vous retrouverez toute l'interface administrative du site web <strong>Site Maçon</strong>
            </h2>
            {# <a href="{{ path('app_home') }}" class="btn btn-outline-warning btn-lg">
                Revenir à la page d'accueil
            </a> #}
        </div>
    </div>  

    <style>
    .logo-custom{
        color: #3A5F7D;
        font-weight: bold;
    }

    #main-menu .menu .menu-item.active {
        background-color: white;
    }

    .fw-bold,
    .fs-5,
    .menu-item-contents .menu-item-label {
        color: #3A5F7D !important;
    }

    /* Cible le lien complet */
    a.menu-item-contents {
        color: #3A5F7D; /* Couleur du texte */
        text-decoration: none; /* Retirer le soulignement si souhaité */
    }

    /* Cible l'icône (Font Awesome) à l'intérieur du lien */
    a.menu-item-contents .menu-icon i {
        color: #3A5F7D;
    }

    /* Optionnel : survol du lien */
    a.menu-item-contents:hover {
        color: #2e4d65; /* Une nuance plus foncée pour l'effet de survol */
    }

    /* Assure aussi la couleur sur hover pour l’icône */
    a.menu-item-contents:hover .menu-icon i {
        color: #2e4d65;
    }

    .sidebar{
        background-color:  #E6DDD4;
        color:  #3A5F7D;
    }

    .user-menu-wrapper .user-avatar,
    .user-name{
        color: #3A5F7D;
        background-color: transparent !important;
    }

    .dropdown-settings .dropdown-settings-button{
        color: #3A5F7D;
    }

    .content-top {
        align-items: center;
        box-shadow: white !important;
    }

    .menu-header-contents .menu-item-label{
        color: #3A5F7D;
        font-weight: bold;
    }




    </style>
{% endblock %}



