<div class="row g-4 mt-5 text-center">
    {% for domaine in domaines %}
        <div class="col-md-6 col-lg-4">
            <div class="bg-light rounded-circle shadow-sm d-inline-flex align-items-center justify-content-center p-3 mb-3" 
                 style="width: 60px; height: 60px;">
                <i class="bi {{ domaine.icone }}" 
                   style="font-size: 2rem; color: {{ domaine.couleurIcone ?: '#0d6efd' }};"></i>
            </div>
            <h5 class="fw-bold">{{ domaine.nom }}</h5>
            <p class="text-muted">{{ domaine.description }}</p>
        </div>
    {% else %}
        <div class="col-12">
            <p class="text-muted">Aucun domaine d'expertise trouv√©.</p>
        </div>
    {% endfor %}
</div>