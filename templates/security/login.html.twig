{# templates/security/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<section class="min-vh-100 d-flex align-items-center">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                
                <h1 class="text-center mb-5 fw-bold text-primary">Connexion</h1>
                
                <div class="card shadow-sm border-0 bg-beige-lime p-4 rounded-4">
                    <div class="card-body p-5">
                        {% if error %}
                            <div class="alert alert-danger">
                                {{ error.messageKey|trans(error.messageData, 'security') }}
                            </div>
                        {% endif %}

                        <form method="post" action="{{ path('app_login') }}">
                            <div class="mb-3">
                                <label for="inputEmail" class="form-label">Adresse email</label>
                                <input type="email" name="_username" id="inputEmail" class="form-control" value="{{ last_username }}" required autofocus>
                            </div>

                            <div class="mb-3">
                                <label for="inputPassword" class="form-label">Mot de passe</label>
                                <input type="password" name="_password" id="inputPassword" class="form-control" required>
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary">Se connecter</button>
                            </div>
                        </form>

                        <div class="text-center mt-3">
                            <small class="text-muted">Pas encore de compte ?
                                <a href="{{ path('app_register') }}" class="text-primary">Inscrivez-vous</a>
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}
